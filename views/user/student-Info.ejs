<html lang="en" data-bs-theme="light">
<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Students info</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.3/examples/album/">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@docsearch/css@3">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="css/info.css">
  </head>
  <body>

    <div class="top-bar">
      <div class="container" style="display: flex; align-items: center; justify-content: space-between;">
          <div style="display: flex; align-items: center;">
              <a href="/" style="margin: auto 15px">
                  <img src="content/images/345832210_1468513350593187_453318926271352151_n-removebg.png" alt="cetz" width="50px">
              </a>
              <p class="college-name" style="letter-spacing: 0.01em; word-spacing: 0.01em; position: relative; top: 6px;">كلية التقنية الهندسية زوارة</p>
          </div>
          <div >
            <a href="/students" style="text-decoration: double; color: white; font-size: 24px; margin-right: 15px;">الطلبة</a>
            <% if(lvl == 0) { %>
            <a href="/users" style="text-decoration: double; color: white; font-size: 24px; margin-right: 15px;">المشرفين</a>
            <%}; %>
            <a href="/workshops" style="text-decoration: double; color: white; font-size: 24px; margin-right: 15px;">اضافة ورشة العمل</a>
            <a href="/logout" class="btn btn-danger">تسجيل الخروج</a>
          </div>
      </div>
    </div>

    


<main>

  <section class="py-3 text-center container">
    <div class="row pt-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw"><%= student.name %></h1>
        <h1 class="fw">الرقم الوطني : <%= student.idNo %></h1>
        <h1 class="fw">رقم الهاتف : <%= student.phoneNo %></h1>
        <div>
          <a href="/edit-student<%= student.idNo %>" class="btn px-3 btn-primary my-2">تعديل</a>
          <button class="sign-btn btn px-3 btn-danger my-2" id="sign-btn">حذف</button>
          <div class="model">
              <div class="model-header" dir="rtl">
                 <div class="model-title"> <h3>تنبيه</h3> </div>
                 <button class="close-btn" id="close-btn">&times;</button>
              </div>
              <div class="model-body">
                <h3>هل انت متاكد من حدف الطالب <br> <%= student.name %></h3>
              </div>
              <div style="display: flex; align-items: center; justify-content: center;">
                  <form action="/student-info" method="post">
                      <input type="text" style="display: none;" name="username" value="<%= student.idNo %>">
                      <button class="btn btn-danger mb-3 " style="text-decoration: none;">حذف</button>
                  </form>
              </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-body-tertiary">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <div class="col">
          <div class="card shadow-sm">
            <img class="bd-placeholder-img card-img-top" width="100%"  src="<%= student.birth %>" role="img">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="<%= student.birth %>" target="_blank" class="btn btn-sm btn-outline-secondary">View</a>
                </div>
                <small class="text-body-secondary">شهادة الميلاد</small>
              </div>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card shadow-sm">
            <img class="bd-placeholder-img card-img-top" width="100%"  src="<%= student.cert %>" role="img">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="<%= student.cert %>" target="_blank" class="btn btn-sm btn-outline-secondary">View</a>
                </div>
                <small class="text-body-secondary">الشهادة التانوية</small>
              </div>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card shadow-sm">
            <img class="bd-placeholder-img card-img-top" width="100%"  src="<%= student.Behavior %>" role="img">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="<%= student.Behavior %>" target="_blank" class="btn btn-sm btn-outline-secondary">View</a>
                </div>
                <small class="text-body-secondary">حسن السيرة والسولوك</small>
              </div>
            </div>
          </div>
        </div>

        <div class="col">
          <div class="card shadow-sm">
            <img class="bd-placeholder-img card-img-top" width="100%"  src="<%= student.health %>" role="img">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="<%= student.health %>" target="_blank" class="btn btn-sm btn-outline-secondary">View</a>
                </div>
                <small class="text-body-secondary">شهادة صحية</small>
              </div>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card shadow-sm">
            <img class="bd-placeholder-img card-img-top" width="100%"  src="<%= student.resdient %>" role="img">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="<%= student.resdient %>" target="_blank" class="btn btn-sm btn-outline-secondary">View</a>
                </div>
                <small class="text-body-secondary">شهادة الاقامة</small>
              </div>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card shadow-sm">
            <img class="bd-placeholder-img card-img-top" width="100%"  src="<%= student.selfie %>" role="img">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="<%= student.selfie %>" target="_blank" class="btn btn-sm btn-outline-secondary">View</a>
                </div>
                <small class="text-body-secondary">صورة شخصية</small>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

</main>


<script src="/docs/5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script src="js/index.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
</body>
</html>