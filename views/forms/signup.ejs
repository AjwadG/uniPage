<html lang="en" data-bs-theme="auto" dir="rtl">
  <head>
    <meta charset="utf-8">

    <title>Newletter Signup</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

    <link href="css/sign.css" rel="stylesheet">
    <style>
      label {
        color: black !important;
        text-align: right;
      }
    </style>
  </head>

<body>

<div class="form-signin mt-1 pb-0 w-100 mx-auto">
  <img src="content/images/345832210_1468513350593187_453318926271352151_n-removebg.png" width="120px" alt="asd">
  <form method="post" action="/signUp">
    <h1 class="h3 mb-3 mt-3 fw-normal">تسجيل</h1>

    <div class="form-floating">
      <input type="text" name="name" class="form-control top"  placeholder="name" required autofocus>
      <label>الاسم</label>
    </div>
    <div class="form-floating ">
      <input type="text" name="idNo" class="form-control mid"  placeholder="idNo" required>
      <label>الرقم الوطني</label>
    </div>
    <div class="form-floating ">
      <input type="text" name="phoneNo" class="form-control mid"  placeholder="phoneNo" required>
      <label>رقم الهاتف</label>
    </div>
    <div class="form-floating ">
      <input type="file" name="cert" class="form-control mid"  placeholder="cert" required>
      <label>شهادة الثانوية</label>
    </div>
    <div class="form-floating ">
      <input type="file" name="Behavior" class="form-control mid"  placeholder="Behavior" required>
      <label>حسن السيرة والسلوك</label>
    </div>
    <div class="form-floating ">
      <input type="file" name="health" class="form-control mid"  placeholder="health" required>
      <label>الشهادة الصحية</label>
    </div>
    <div class="form-floating ">
      <input type="file" name="birth" class="form-control mid"  placeholder="birth" required>
      <label>شهادة الميلاد</label>
    </div>
    <div class="form-floating ">
      <input type="file" name="resdient" class="form-control mid"  placeholder="resdient" required>
      <label>شهادة الاقامة</label>
    </div>
    <div class="form-floating ">
      <input type="file" name="selfie" class="form-control bot"  placeholder="selfie" required>
      <label>صورة شخصية</label>
    </div>

    <button class="w-100 btn mt-3 btn-lg btn-danger" type="submit">تسجيل</button>
    <p class="mt-4 mb-1 text-body-secondary">© CETZ</p>
  </form>

</div>


    
  

</body></html>