    <div class="px-4 py-5 my-5 text-center " name="second hero">
    <h1 class="display-5 fw-bold text-body-emphasis">ورشات العمل</h1>
    <div class="heroStyle center mb-4"></div>
      <div class="container">  
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <% workShops.forEach(shop => { %>
              <% if (shop.date <= now) { %>
          <div class="col">         
              <div class="card shadow-sm text-end shop-main">
                  <img src="<%= shop.image %>" class="workShop-card-img">
                  <div class="workShop-text">
                      <div class="workShop-text-title"><a href=""><%= shop.title %></a></div>
                      <div class="workShop-text-info">
                          
                          <div class="workShop-text-info-info">
                            <% if (shop.date >= now) { %>
                              <span>ستبداء : </span>
                            <%} else { %>
                              <span>بدأت : </span>
                            <% } %>
                              <span> <%= shop.dates %> </span>
                            <% if(lvl != -1) { %>
                              <a href="/edit-workShops<%= shop.title %>" class="btn btn-secondary">تعديل</a>
                                  <button class="sign-btn btn btn-danger">حذف</button>
                                  <div class="model">
                                      <div class="model-header" dir="rtl">
                                      <h3 class="model-title">تنبيه</h3>
                                      <button class="close-btn" id="close-btn">&times;</button>
                                      </div>
                                      <div class="model-body" style="text-align: center;">
                                          <h4 style="font-size: large; display: inline-block;">هل انت متاكد من حدف ورشة العمل <br> <%= shop.title %></h4>
                                      </div>
                                      <div style="display: flex; align-items: center; justify-content: center;">
                                          <form action="/workShop" method="post">
                                              <input type="text" style="display: none;" name="image" value="<%= shop.image %>">
                                              <button class="btn btn-danger mb-3 " style="text-decoration: none;">حذف</button>
                                          </form>
                                      </div>
                                  </div>
                                  <%}; %>
                          </div>
                      </div>
                      <div class="workShop-text-text"><%= shop.body %></div>
                  </div>
              </div>
          </div>
          <% }}); %>
        </div>
        <div class="d-grid mt-4 gap-2 d-sm-flex justify-content-sm-center">
          <a class="linkbuton" href="/workShop">جميع ورشات العمل</a>
        </div>
    </div>
